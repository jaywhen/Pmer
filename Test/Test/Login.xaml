<Window x:Class="Test.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#0034dd">
            <TextBlock Text="Pmer-Login" FontSize="14" Foreground="White" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="45" Name="btnMin" Height="30" Content="─" Foreground="White" BorderThickness="0" Background="Transparent" Click="btnMin_Click" />
                <Button Width="45" Name="btnMax" Height="30" Content="☐" Foreground="White" BorderThickness="0" Background="Transparent" Click="btnMax_Click" />
                <Button Width="45" Name="btnClose" Height="30" Content="✕" Foreground="White" BorderThickness="0" Background="Transparent" Click="btnClose_Click" />
            </StackPanel>
        </Grid>
       
        


    </Grid>
</Window>
