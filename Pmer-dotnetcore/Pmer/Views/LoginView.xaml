<Window x:Class="Pmer.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        
        xmlns:handler="clr-namespace:Pmer.Handler"
        handler:DialogCloser.DialogResult="{Binding DialogResult}"
        
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        MinWidth="500" MinHeight="380"
        Title="LooginView" Height="380" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#0034dd"/>
        <TextBlock 
                   FontSize="14"
                   Foreground="WhiteSmoke"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0"
                   >
            <Run
                Text="Welcome! "
                Foreground="AliceBlue"/>
            <Run 
                Text="{Binding MasterUserName}" />
        </TextBlock>
        
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                Foreground="WhiteSmoke"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Close" Margin="0,1,0,1.667" Height="Auto" 
                Command="{Binding CloseCommand}" Cursor="Hand"
                >
                ✕
            </Button>

        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Margin="0,30"
                >
                <Run
                    FontSize="25"
                    FontWeight="SemiBold"
                    Text="Enter the master password to log in"/>
                <LineBreak/>
                <LineBreak/>
                <Run
                    FontSize="20"
                    Foreground="#A3A3A4"
                    Text=":)"/>
            </TextBlock>
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <PasswordBox
                x:Name="PasswordBox"
                materialDesign:HintAssist.Hint="Password"
                materialDesign:TextFieldAssist.HasClearButton="True"
                materialDesign:HintAssist.Foreground="#0034dd"
                materialDesign:TextFieldAssist.UnderlineBrush="#0034dd"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                handler:PasswordBoxHelper.Password="{Binding PassWord, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinWidth="200"
                Width="200" Cursor="IBeam"
                >
                <i:Interaction.Behaviors>
                    <handler:PasswordBoxBehavior />
                </i:Interaction.Behaviors>
                <PasswordBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                </PasswordBox.InputBindings>
            </PasswordBox>
            <TextBlock Grid.Row="3" 
                       Name="WindowToolTip" 
                       Text="{Binding WindowToolTip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="18" 
                       TextAlignment="Center" 
                       Visibility="Visible" />
            <Button Grid.Row="3"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="120"
                    Command="{Binding LoginCommand}"
                    Background="#2256ff"
                    ToolTip="Resource name: MaterialDesignRaisedButton" Cursor="Hand">
                Go!
            </Button>
            
        </Grid>

    </Grid>
</Window>
