            Width="200"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            materialDesign:TextFieldAssist.HasClearButton="True"
            materialDesign:HintAssist.Foreground="#0034dd"
            materialDesign:TextFieldAssist.UnderlineBrush="#0034dd"
